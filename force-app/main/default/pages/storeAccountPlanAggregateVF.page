                        'colors':['#e74c3c','#F1C40F','#2ECC71'],
                        'tooltip':{text: 'percentage', showColorCode: true},
                        slices: {0:{color: '#e74c3c'},1:{color: '#F1C40F'},2:{color: '#2ECC71'}},
                        'reverseCategories': true, 'pieStartAngle': 180, legend: {position: 'none'}
