                    $('.link-to-sobject').on('click', linkToSobjectClickHandler);
                    
                    $('.js-change-amt').each(function() {
                        var amt = parseInt($(this).attr('data-amt'));
                        if(amt > 0) {
                            $(this).prepend('+').addClass('pos-value');
                        } else {
