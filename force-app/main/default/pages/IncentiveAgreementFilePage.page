                                <tr>
                                    <th colspan="3" style="background:#A80C35; border:1px solid #ddd;  color:#fff;text-align: center;">Market Leader Incentives</th>
                                </tr>
                                <tr>
                                    <th style="border:px solid #ddd;  width:33%;border-top:none; font-weight:bold;text-align: left;">Market Leader Product</th>
